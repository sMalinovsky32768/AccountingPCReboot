<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AccountingPC.BlackTheme">
    <Style TargetType="GridSplitter">
        <Setter Property="Background" Value="#33000000"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="textBlock">
        <!--<Setter Property="Padding" Value="5"/>-->
        <Setter Property="Foreground" Value="{DynamicResource on-background-brush}"/>
    </Style>
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Color.xaml"/>
        <ResourceDictionary Source="ComboBox.xaml"/>
        <ResourceDictionary Source="Button.xaml"/>
        <ResourceDictionary Source="Box.xaml"/>
        <ResourceDictionary Source="DataGrid.xaml"/>
        <ResourceDictionary Source="Menu.xaml"/>
        <ResourceDictionary Source="ListBox.xaml"/>
        <ResourceDictionary Source="ListBoxNoSelected.xaml"/>
        <ResourceDictionary Source="ListView.xaml"/>
        <ResourceDictionary Source="Scroll.xaml"/>
        <ResourceDictionary Source="StatusBar.xaml"/>
        <ResourceDictionary Source="ContextMenu.xaml"/>
        <ResourceDictionary Source="RadioButton.xaml"/>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>